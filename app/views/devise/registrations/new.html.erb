<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-field">
    <%= f.label :email, :class => 'form-title' %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => 'form-text-field' %>
  </div>
  
  <div class="form-field">
    <%= f.label :name, :class => 'form-title' %><br />
    <%= f.text_field :name, :class => 'form-text-field' %>
  </div>

  <div class="form-field">
    <%= f.label :password, :class => 'form-title' %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", :class => 'form-text-field' %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, :class => 'form-title' %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", :class => 'form-text-field' %>
  </div>

  <div class="form-actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
