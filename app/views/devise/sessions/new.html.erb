<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-field">
    <%= f.label :email, :class => 'form-title' %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => 'form-text-field' %>
  </div>

  <div class="form-field">
    <%= f.label :password, :class => 'form-title' %><br />
    <%= f.password_field :password, autocomplete: "current-password", :class => 'form-text-field' %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="form-field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, :class => 'form-title' %>
    </div>
  <% end %>

  <div class="form-actions">
    <%= f.submit "Log in" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
