<div class="flex-row user-card">
  <%= link_to user_path(user.id) do
    user.photo.nil? ? image_tag("https://th.bing.com/th/id/R.509daf002adcc4111234623c1cf79c91?rik=KDCn%2fZO9pDSQqg&pid=ImgRaw&r=0", class: "user-img"): image_tag(user.photo, class: "user-img")
  end %>  

  <div class="user-info">
    <%= link_to user_path(user.id) do %>
      <h2><%= user.name %></h2>
    <% end %>
    <p class="align-rigth">Number of post: <%= user.posts.size %></p>
    <%= current_user == user ? (button_to "New Post", new_user_post_path(user.current_user), method: :get) : nil %>
  </div>
</div>